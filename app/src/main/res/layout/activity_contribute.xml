<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".contributeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_gravity="center"
        android:layout_margin="30sp"
        android:src="@drawable/contribute_wallpaper"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At first verify your account"
            android:layout_margin="10sp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@color/primaryTextColor"
            android:textSize="25sp"
            android:drawableStart="@drawable/email"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/questionProviderEmailID"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passowrd"
            android:textSize="25sp"
            android:drawableStart="@drawable/password"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:inputType="textPassword"
            android:gravity="center"
            android:id="@+id/questionProviderPassID"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAllCaps="false"
            android:id="@+id/nextBTN"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@color/primaryLightColor"/>

    </LinearLayout>



</LinearLayout>