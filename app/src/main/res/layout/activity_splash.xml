<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_IVid"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/circle_top"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/splashPhotoID"
            android:layout_below="@+id/top_IVid"
            android:layout_marginRight="30sp"
            android:src="@drawable/openningphoto"
            android:adjustViewBounds="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/splashTextID"
            android:textSize="30sp"
            android:layout_marginBottom="20sp"
            android:layout_margin="20sp"
            android:gravity="center"
            android:layout_marginLeft="100sp"
            android:textStyle="bold|italic"
            android:layout_below="@id/splashPhotoID"
            android:textColor="@color/primaryDarkColor"
            android:text="@string/app_name"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:id="@+id/bottom_IVid"
        android:src="@drawable/circle_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>



</RelativeLayout>